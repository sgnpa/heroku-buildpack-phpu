#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.2.22"
APACHE_PATH="apache"
PHP_VERSION="5.3.10"
PHP_PATH="php"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

echo "BUILD_DIR = $BUILD_DIR"
echo "CACHE_DIR = $CACHE_DIR"
echo "-----> making data dir's"
mkdir -p $BUILD_DIR/data/avatar
mkdir -p $BUILD_DIR/data/avatars
mkdir -p $BUILD_DIR/data/backup
mkdir -p $BUILD_DIR/data/cache
mkdir -p $BUILD_DIR/data/logs
mkdir -p $BUILD_DIR/data/tmp
mkdir -p $BUILD_DIR/data/view
chmod -R 777 $BUILD_DIR/data
chmod 777 $BUILD_DIR/data
touch $BUILD_DIR/data/index.htm
touch $BUILD_DIR/data/install.lock
touch $BUILD_DIR/data/updatetime.lock
touch $BUILD_DIR/data/upgrade.lock
echo "-----> Writing database to data/config.inc.php"
tee $BUILD_DIR/data/config.inc.php <<EOF
<?php 
define('UC_DBHOST', $UC_DBHOST);
define('UC_DBUSER', $UC_DBUSER);
define('UC_DBPW', $UC_DBPW);
define('UC_DBNAME', $UC_DBNAME);
define('UC_DBCHARSET', 'utf8');
define('UC_DBTABLEPRE', 'uc_');
define('UC_COOKIEPATH', '/');
define('UC_COOKIEDOMAIN', '');
define('UC_DBCONNECT', 0);
define('UC_CHARSET', 'utf-8');
define('UC_FOUNDERPW', $UC_FOUNDERPW);
define('UC_FOUNDERSALT', $UC_FOUNDERSALT);
define('UC_KEY', $UC_KEY);
define('UC_SITEID', $UC_SITEID);
define('UC_MYKEY', $UC_MYKEY);
define('UC_DEBUG', false);
define('UC_PPP', 20);
EOF
echo "-----> move app things to www"
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

APACHE_URL="https://s3.amazonaws.com/php-lp/apache-$APACHE_VERSION.tar.gz"
echo "-----> Bundling Apache version $APACHE_VERSION"
curl --silent --max-time 60 --location "$APACHE_URL" | tar xz

PHP_URL="https://s3.amazonaws.com/php-lp/php-$PHP_VERSION.tar.gz"
echo "-----> Bundling PHP version $PHP_VERSION"
curl --silent --max-time 60 --location "$PHP_URL" | tar xz

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini php

# make php available on bin
mkdir -p bin
ln -s /app/php/bin/php bin/php

cat >>boot.sh <<EOF
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext
export PHP_INI_SCAN_DIR=/app/www
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF


chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR
